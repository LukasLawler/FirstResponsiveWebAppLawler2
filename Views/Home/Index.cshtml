@model Person
@{ 
    ViewBag.Title = "Current Age Calculator";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home page</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
     
</head>
<body>
    <div class="jumbotron">
        <h1 class="text-center">Current Age Calculator</h1>
        <p class="text-center">An app that calculates your age as of December 31, 2021.</p>
        <p class="text-center">Birth year must be between 1900 and 2021.</p>
    </div>
    <div class="row">
        <div class="col-1 col-sm-2 col-med-3"> </div>
        <div class="col-10 col-sm-8 col-med-6">
            <form class="justify-content-center" asp-action="Index" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Name">Name:</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="BirthYear">Birth year</label>
                    <input asp-for="BirthYear" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Age this year:</label>
                    <input value="@ViewBag.Age.ToString()" class="form-control" readonly />
                </div>
                <button type="submit" class="btn btn-outline-primary">Calculate</button>
                <a asp-action="Index">Clear</a>
            </form>
        </div>
        <div class="col-1 col-sm-2 col-med-3"> </div>
    </div>
</body>
</html>